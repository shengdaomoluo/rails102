<div class="col-md-12">
  <div class="group">
    <%= link_to("新建群组", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>序号</td>
        <td>题目</td>
        <td>概述</td>
        <td>创建者</td>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "group_item", :collection => @groups, :as => :group %>
    </tbody>
  </table>
</div>
